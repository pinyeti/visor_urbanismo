pipeline {
    agent any

    stages {
        stage('Clonar repositorio') {
            steps {
                // Clonar tu repositorio desde GitHub o cualquier otro sistema de control de versiones
                checkout scm
            }
        }

        stage('Construir imagen Docker') {
            steps {
                // Ejecutar el comando 'docker build' para construir la imagen
                sh 'docker build -t jenkins_visor:1.0 .'
            }
        }

    }

    post {
        success {
            echo 'La construcci贸n y ejecuci贸n del contenedor Docker se completaron exitosamente.'
        }
        failure {
            echo 'Hubo un problema durante la construcci贸n y/o ejecuci贸n del contenedor Docker.'
        }
    }
}
